{
  "name": "mc-router-gui",
  "version": "1.0.0",
  "description": "Web GUI for mc-router configuration management",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build-css": "tailwindcss -i ./public/css/input.css -o ./public/css/output.css --watch",
    "build-css-prod": "tailwindcss -i ./public/css/input.css -o ./public/css/output.css --minify"
  },
  "dependencies": {
    "express": "^4.18.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "ejs": "^3.1.9",
    "express-session": "^1.17.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/cors": "^2.8.13",
    "@types/body-parser": "^1.19.2",
    "@types/ejs": "^3.1.2",
    "@types/express-session": "^1.17.7",
    "typescript": "^5.1.6",
    "ts-node-dev": "^2.0.0",
    "tailwindcss": "^3.3.0"
  }
}