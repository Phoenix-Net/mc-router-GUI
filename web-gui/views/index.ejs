<!DOCTYPE html>
<html lang="en" class="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MC-Router GUI</title>
    <link href="/css/output.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/@mdi/font@7.4.47/css/materialdesignicons.min.css" rel="stylesheet">
    <link rel="icon" id="favicon"
        href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><rect width='80' height='80' x='10' y='10' rx='8' fill='%23<%= routerStatus === 'active' ? '00AA00' : 'FF0000' %>'/></svg>">
</head>

<body class="bg-gray-100 dark:bg-gray-900 min-h-screen transition-colors duration-200 flex flex-col">
    <!-- Header -->
    <header class="bg-minecraft-dark dark:bg-gray-800 text-white shadow-lg">
        <div class="container mx-auto px-4 py-6">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-bold">MC-Router GUI</h1>
                    <p class="text-gray-300 dark:text-gray-400 mt-2">Manage your Minecraft server routing configuration
                    </p>
                </div>
                <div class="flex space-x-2">
                    <button id="themeToggle"
                        class="px-4 py-2 rounded-lg bg-gray-700 dark:bg-gray-600 hover:bg-gray-600 dark:hover:bg-gray-500 transition-colors flex items-center justify-center flex-shrink-0 min-w-[44px] min-h-[44px]">
                        <i id="themeIcon" class="mdi mdi-white-balance-sunny text-lg"></i>
                    </button>
                    <form method="POST" action="/logout" class="inline">
                        <button type="submit"
                            class="px-4 py-2 rounded-lg bg-red-600 hover:bg-red-700 transition-colors flex items-center justify-center flex-shrink-0 min-w-[44px] min-h-[44px] text-white">
                            <i class="mdi mdi-logout text-lg"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8 flex-grow">
        <!-- Status Bar -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 mb-8">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <div class="flex flex-col sm:flex-row sm:items-center gap-4 sm:gap-6">
                    <div class="flex items-center">
                        <div id="statusIndicator"
                            class="w-3 h-3 <%= routerStatus === 'active' ? 'bg-green-500' : 'bg-red-500' %> rounded-full mr-2">
                        </div>
                        <span id="statusText" class="text-sm text-gray-600 dark:text-gray-300">Router Status: <%=
                                routerStatus==='active' ? 'Active' : 'Offline' %></span>
                    </div>
                    <div class="text-sm text-gray-600 dark:text-gray-300">
                        Total Mappings: <span class="font-semibold">
                            <%= mappings.length %>
                        </span>
                    </div>
                    <div class="text-xs text-gray-500 dark:text-gray-400">
                        <% if (routerStatus==='offline' ) { %>Routes loaded from config file<% } else { %>Routes synced
                                with mc-router<% } %>
                    </div>
                </div>
                <button id="refreshBtn" class="btn-secondary text-sm whitespace-nowrap">Refresh</button>
            </div>
        </div>

        <!-- Server Mappings Section -->
        <section class="mb-8">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Server Mappings</h2>
                <button id="addMappingBtn" class="btn-primary">
                    + Add Mapping
                </button>
            </div>

            <div id="mappingsContainer" class="grid gap-4">
                <% if (mappings.length===0) { %>
                    <div class="card text-center py-8">
                        <p class="text-gray-500 dark:text-gray-400 text-lg">No server mappings configured</p>
                        <p class="text-gray-400 dark:text-gray-500 mt-2">Click "Add Mapping" to create your
                            first server
                            route</p>
                    </div>
                    <% } else { %>
                        <% mappings.forEach(mapping=> { %>
                            <div class="card">
                                <div class="flex justify-between items-start">
                                    <div class="flex-1">
                                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                                            <%= mapping.hostname %>
                                                <% if (mapping.is_default) { %>
                                                    <span
                                                        class="ml-2 px-2 py-1 bg-minecraft-green text-white text-xs rounded">DEFAULT</span>
                                                    <% } %>
                                        </h3>
                                        <p class="text-gray-600 dark:text-gray-300 mt-1">→ <%= mapping.backend %>
                                        </p>
                                        <p class="text-sm text-gray-500 dark:text-gray-400 mt-2">
                                            Created: <%= new Date(mapping.created_at).toLocaleDateString() %>
                                        </p>
                                    </div>
                                    <div class="flex space-x-2">
                                        <button data-action="edit" data-mapping-hostname="<%= mapping.hostname %>"
                                            class="btn-secondary text-sm">
                                            Edit
                                        </button>
                                        <button data-action="delete" data-mapping-hostname="<%= mapping.hostname %>"
                                            class="btn-danger text-sm">
                                            Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                                <% } %>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 mt-auto">
        <div class="container mx-auto px-4 py-6">
            <div class="flex flex-col sm:flex-row justify-center items-center space-y-4 sm:space-y-0 sm:space-x-6">
                <div class="text-sm text-gray-600 dark:text-gray-400 text-center sm:text-left">
                    Built with ❤️ by <a href="https://phoenixnet-labs.com">PhoenixNet-Labs</a>
                </div>
                <div class="flex space-x-3">
                    <a href="https://github.com/itzg/mc-router" target="_blank" rel="noopener noreferrer"
                        class="inline-flex items-center px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white text-sm rounded-lg transition-colors">
                        <i class="mdi mdi-github mr-2"></i>
                        MC-Router
                    </a>
                    <a href="https://github.com/Phoenix-Net/mc-router-gui" target="_blank" rel="noopener noreferrer"
                        class="inline-flex items-center px-4 py-2 bg-minecraft-green hover:bg-green-600 text-white text-sm rounded-lg transition-colors">
                        <i class="mdi mdi-github mr-2"></i>
                        MC-Router-GUI
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Add Mapping Modal -->
    <div id="addMappingModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white dark:bg-gray-800 rounded-lg p-6 w-full max-w-md mx-4">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Add Server Mapping</h3>
                <button data-modal-close="addMappingModal"
                    class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 text-xl font-light">
                    ✕
                </button>
            </div>

            <form id="addMappingForm">
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Hostname
                    </label>
                    <input type="text" name="hostname" placeholder="e.g., vanilla.example.com" class="input-field"
                        required />
                </div>

                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Backend Server
                    </label>
                    <input type="text" name="backend" placeholder="e.g., minecraft-server:25565" class="input-field"
                        required />
                </div>

                <div class="mb-6">
                    <label class="flex items-center">
                        <input type="checkbox" name="isDefault" class="mr-2">
                        <span class="text-sm text-gray-700 dark:text-gray-300">Set as default server</span>
                    </label>
                </div>

                <div class="flex space-x-3">
                    <button type="submit" class="btn-primary flex-1">
                        Add Mapping
                    </button>
                    <button type="button" data-modal-close="addMappingModal" class="btn-secondary flex-1">
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Edit Mapping Modal -->
    <div id="editMappingModal"
        class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white dark:bg-gray-800 rounded-lg p-6 w-full max-w-md mx-4">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Edit Server Mapping</h3>
                <button data-modal-close="editMappingModal"
                    class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 text-xl font-light">
                    ✕
                </button>
            </div>

            <form id="editMappingForm">
                <input type="hidden" name="originalHostname" />
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Hostname
                    </label>
                    <input type="text" name="hostname" placeholder="e.g., vanilla.example.com" class="input-field"
                        required />
                </div>

                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Backend Server
                    </label>
                    <input type="text" name="backend" placeholder="e.g., minecraft-server:25565" class="input-field"
                        required />
                </div>

                <div class="mb-6">
                    <label class="flex items-center">
                        <input type="checkbox" name="isDefault" class="mr-2">
                        <span class="text-sm text-gray-700 dark:text-gray-300">Set as default server</span>
                    </label>
                </div>

                <div class="flex space-x-3">
                    <button type="submit" class="btn-primary flex-1">
                        Update Mapping
                    </button>
                    <button type="button" data-modal-close="editMappingModal" class="btn-secondary flex-1">
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Initialize dark mode immediately -->
    <script>
        // Initialize dark mode before main script loads
        (function () {
            const savedTheme = localStorage.getItem('theme');
            const html = document.documentElement;

            // Default to dark mode if no preference is saved
            if (savedTheme !== 'light') {
                html.classList.add('dark');
                localStorage.setItem('theme', 'dark');
            } else {
                html.classList.remove('dark');
            }
        })();
    </script>

    <!-- Scripts -->
    <script type="module" src="/js/main.js"></script>
</body>

</html>