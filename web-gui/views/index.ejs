<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MC-Router GUI</title>
    <link href="/css/output.css" rel="stylesheet">
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>üéÆ</text></svg>">
</head>

<body class="bg-gray-100 min-h-screen">
    <!-- Header -->
    <header class="bg-minecraft-dark text-white shadow-lg">
        <div class="container mx-auto px-4 py-6">
            <h1 class="text-3xl font-bold">üéÆ MC-Router GUI</h1>
            <p class="text-gray-300 mt-2">Manage your Minecraft server routing configuration</p>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
        <!-- Status Bar -->
        <div class="bg-white rounded-lg shadow-md p-4 mb-8">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <div class="flex items-center">
                        <div class="w-3 h-3 bg-green-500 rounded-full mr-2"></div>
                        <span class="text-sm text-gray-600">Router Status: Active</span>
                    </div>
                    <div class="text-sm text-gray-600">
                        Total Mappings: <span class="font-semibold">
                            <%= mappings.length %>
                        </span>
                    </div>
                </div>
                <button onclick="location.reload()" class="btn-secondary text-sm">
                    üîÑ Refresh
                </button>
            </div>
        </div>

        <!-- Server Mappings Section -->
        <section class="mb-8">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-2xl font-bold text-gray-900">Server Mappings</h2>
                <button id="addMappingBtn" class="btn-primary">
                    ‚ûï Add Mapping
                </button>
            </div>

            <div id="mappingsContainer" class="grid gap-4">
                <% if (mappings.length===0) { %>
                    <div class="card text-center py-8">
                        <p class="text-gray-500 text-lg">No server mappings configured</p>
                        <p class="text-gray-400 mt-2">Click "Add Mapping" to create your first server route</p>
                    </div>
                    <% } else { %>
                        <% mappings.forEach(mapping=> { %>
                            <div class="card">
                                <div class="flex justify-between items-start">
                                    <div class="flex-1">
                                        <h3 class="text-lg font-semibold text-gray-900">
                                            <%= mapping.hostname %>
                                                <% if (mapping.is_default) { %>
                                                    <span
                                                        class="ml-2 px-2 py-1 bg-minecraft-green text-white text-xs rounded">DEFAULT</span>
                                                    <% } %>
                                        </h3>
                                        <p class="text-gray-600 mt-1">‚Üí <%= mapping.backend %>
                                        </p>
                                        <p class="text-sm text-gray-500 mt-2">
                                            Created: <%= new Date(mapping.created_at).toLocaleDateString() %>
                                        </p>
                                    </div>
                                    <div class="flex space-x-2">
                                        <button data-action="edit" data-mapping-hostname="<%= mapping.hostname %>"
                                            class="btn-secondary text-sm">
                                            ‚úèÔ∏è Edit
                                        </button>
                                        <button data-action="delete" data-mapping-hostname="<%= mapping.hostname %>"
                                            class="btn-danger text-sm">
                                            üóëÔ∏è Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                                <% } %>
            </div>
        </section>

        <!-- Router Info Section -->
        <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Router Information</h2>
            
            <div class="card">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6"></div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">API Endpoints</h3>
                        <ul class="text-sm text-gray-600 space-y-1"></ul>
                            <li><code>GET /routes</code> - List all routes</li>
                            <li><code>POST /routes</code> - Create new route</li>
                            <li><code>DELETE /routes/{hostname}</code> - Delete route</li>
                            <li><code>POST /defaultRoute</code> - Set default route</li>
                        </ul>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">Features</h3>
                        <ul class="text-sm text-gray-600 space-y-1"></ul>
                    </div>  <li>‚úÖ Dynamic route management</li>
                            <li>‚úÖ Default server routing</li>
                            <li>‚úÖ Real-time updates</li>
                            <li>‚úÖ REST API integration</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Add Mapping Modal -->
    <div id="addMappingModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white rounded-lg p-6 w-full max-w-md mx-4">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-semibold">Add Server Mapping</h3>
                <button data-modal-close="addMappingModal" class="text-gray-400 hover:text-gray-600">
                    ‚úï
                </button>
            </div>

            <form id="addMappingForm">
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Hostname
                    </label>
                    <input type="text" name="hostname" placeholder="e.g., vanilla.example.com" class="input-field"
                        required />
                </div>

                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Backend Server
                    </label>
                    <input type="text" name="backend" placeholder="e.g., minecraft-server:25565" class="input-field"
                        required />
                </div>

                <div class="mb-6">
                    <label class="flex items-center">
                        <input type="checkbox" name="isDefault" class="mr-2">
                        <span class="text-sm text-gray-700">Set as default server</span>
                    </label>
                </div>

                <div class="flex space-x-3">
                    <button type="submit" class="btn-primary flex-1">
                        Add Mapping
                    </button>
                    <button type="button" data-modal-close="addMappingModal" class="btn-secondary flex-1">
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script type="module" src="/js/main.js"></script>
</body>

</html>